<button class="btn btn-primary btn-sm mb-1"
        data-bs-toggle="collapse"
        data-bs-target="#submitResultBox">
    Spielergebnis eintragen
</button>

<div class="collapse bg-white p-0 rounded rounded-4"
     id="submitResultBox">
    <h3>Ergebnis eintragen</h3>
    <form action="{{ url_for('wklb.results') }}" method="POST">
        {{ form.csrf_token }}

        {{ errorBox(form.visiting_team_pts.errors) }}

        <table class="w-100 mb-1">
            <tbody>
                <tr>
                    <td> {{ current_user.team.name }} </td>
                    <td> : </td>
                    <td> {{ form.visiting_team(class_="form-control text-dark",
                                               placeholder="Gast Mannschaft")}}
                    </td>
                </tr>
                <tr>
                    <td> {{ form.home_team_pts(class_="form-control text-dark",
                                               placeholder="0")}}
                    </td>
                    <td> </td>
                    <td> {{ form.visiting_team_pts(class_="form-control text-dark",
                                                   placeholder="0")}}
                    </td>
                </tr>
            </tbody>
        </table>

        <button type="button"
                class="btn btn-sm btn-secondary"
                data-bs-target="#submitResultBox"
                data-bs-toggle="collapse">Abbrechen</button>
        {{ form.submit(class_="btn btn-primary btn-sm") }}
    </form>
</div>
